/* pages/test_result/test_result.wxss */

.customer_lists {
  width: 750rpx;
}

.customer_list {
  width: 750rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  background: #8adb94;
  align-items: center;
}

.customer_list_block {
  width: 20%;
  font-size: 30rpx;
  color: #333;
  text-align: center;
  margin: 20rpx 0;
}

.customer_list_block:nth-child(4) {
  width: 40%;
  font-size: 30rpx;
  color: #333;
  text-align: center;
}

.health_topics {
  width: 750rpx;
}

.health_topic_block {
  width: 100%;
  border-bottom: 2rpx solid #c1c1c1;
}

.health_topic_title {
  width: 94%;
  margin: 30rpx auto;
  font-size: 30rpx;
  color: #333;
}

.health_topic {
  width: 94%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
}

.health_topic_single {
  width: 25%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  margin-bottom: 30rpx;
}

.health_topic_single_01 {
  width: 33.33%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  margin-bottom: 30rpx;
}

.health_topic_single_pic {
  width: 40rpx;
  height: 40rpx;
}

.health_topic_single_font {
  font-size: 26rpx;
  color: #333;
  margin-left: 20rpx;
}

.health_topic_single_01 .hover {
  color: #11ac24;
}

.health_topic_single .hover {
  color: #11ac24;
}