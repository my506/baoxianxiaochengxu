/* pages/test_see/test_see.wxss */

.customer_lists {
  width: 750rpx;
  border-top: 2rpx solid #c1c1c1;
}

.customer_list {
  width: 750rpx;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}

.customer_list:nth-child(2n) {
  width: 750rpx;
  background: #fbc7aa;
}

.customer_list_block {
  width: 20%;
  font-size: 30rpx;
  color: #333;
  text-align: center;
}

.customer_list_block:nth-child(4) {
  width: 40%;
  font-size: 30rpx;
  color: #333;
  text-align: center;
}
